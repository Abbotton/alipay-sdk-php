{
    "name": "wi1dcard/alipay-sdk",
    "description": "支付宝非官方 PHP SDK（基于官方 3.3.0 版）",
    "type": "library",
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^7.0"
    },
    "authors": [
        {
            "name": "wi1dcard",
            "email": "wi1dcard@qq.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Alipay\\": "aop/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alipay\\Test\\": "tests",
            "Alipay\\Example\\": "examples"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/phpcs aop -p --colors --standard='PSR1,PSR2,PSR12'",
        "fix-cs": "vendor/bin/phpcbf aop -p --colors --standard='PSR1,PSR2,PSR12,Zend'",
        "phpunit": "vendor/bin/phpunit --coverage-html=_coverage && open _coverage/index.html"
    }
}
